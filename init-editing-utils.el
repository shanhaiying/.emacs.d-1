(defun toggle-indent-tab ()
  (interactive)
  (if indent-tabs-mode
      (progn
        (setq indent-tabs-mode nil)
        )
    (progn
      (setq indent-tabs-mode t)
      (setq indent-line-function 'insert-tab)
      )
    )
  )
